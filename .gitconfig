[user]
  name = UTDoi
  email = doisaltu1899@gmail.com
[color]
  ui = auto
[core]
  editor = nvim
  excludesfile = ~/.gitignore_global
  quotepath = false
  pager = diff-so-fancy | less --tabs=4 -FXRi
  ignorecase = false
[alias]
  a = add
  bn = rev-parse --abbrev-ref HEAD
  br = branch
  ci = commit
  co = checkout
  f = fetch
  st = status
  cb = checkout -b
  showpr = !"f() { git log --merges --oneline --reverse --ancestry-path $1...develop | grep 'Merge pull request #' | head -n 1;  }; f"
[init]
  templatedir = ~/.git_template
[pull]
  rebase = false
[ghq]
  root = ~/src
[credential]
  helper = osxkeychain
[secrets]
  # for GCP
  patterns = private_key
  patterns = private_key_id
  # for AWS
  providers = git secrets --aws-provider
  patterns = (A3T[A-Z0-9]|AKIA|AGPA|AIDA|AROA|AIPA|ANPA|ANVA|ASIA)[A-Z0-9]{16}
  patterns = (\"|')?(AWS|aws|Aws)?_?(SECRET|secret|Secret)?_?(ACCESS|access|Access)?_?(KEY|key|Key)(\"|')?\\s*(:|=>|=)\\s*(\"|')?[A-Za-z0-9/\\+=]{40}(\"|')?
  patterns = (\"|')?(AWS|aws|Aws)?_?(ACCOUNT|account|Account)_?(ID|id|Id)?(\"|')?\\s*(:|=>|=)\\s*(\"|')?[0-9]{4}\\-?[0-9]{4}\\-?[0-9]{4}(\"|')?
  allowed = AKIAIOSFODNN7EXAMPLE
  allowed = wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
[include]
  path = ~/.gitconfig.local
